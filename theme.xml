<theme>

	<formatVersion>4</formatVersion>

	<feature supported="carousel">
	
	<view name="system">
	
		<!-- Imagen de fondo estatica -->
		
		<image name="background_aux" extra="true">		
			<path>./assets/bg detras.png</path>
			<size>1 1</size>
			<pos>0 0</pos>
			<zIndex>1</zIndex>
		</image>
		
		<image name="background" extra="true">		
			<path>./assets/bg delante.png</path>
			<size>1 1</size>
			<pos>0 0</pos>
			<zIndex>3</zIndex>
		</image>
		
		<!-- Logo de sistema -->
		
		<image name="logo">
			<path>./assets/logos/${system.theme}.png</path>
		</image>
		
		<!-- Modo de vista de los sistemas - modo vertical -->
		
		<carousel name="systemcarousel">
			<type>vertical</type>
			<pos>0 0.19</pos>
			<size>1 0.6</size>
			<color>ffffff00</color>
			<logoScale>1.2</logoScale>
			<logoSize>0.155 0.155</logoSize>
			<maxLogoCount>3</maxLogoCount>
			<logoAlignment>bottom</logoAlignment>
			<zIndex>2</zIndex>
		
		</carousel>
		
		<!-- Numero de juegos del sistema -->
		
		<text name="systemInfo">
			<backgroundColor>ffffff00</backgroundColor>
			<color>ffffff</color>
			<pos>0.27 0.495</pos>
			<size>0.47 0.20</size>
			<fontPath>./assets/biohazard.otf</fontPath>
			<fontSize>0.035</fontSize>
			<alignment>center</alignment>
			<zIndex>4</zIndex>			
		</text>
		
		<!-- Texto info sistema -->
		
		<helpsystem name="help">
			<pos>0.22 0.01</pos>
			<textColor>ed1c16</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./assets/Resident_Evil.ttf</fontPath>
			<fontSize>0.035</fontSize>			
		</helpsystem>
		
	</view>
	
	</feature>
		
	<view name="basic, detailed, video">
	
		<!-- Fondo gamelist -->
		
		<image name="backgroundfilter" extra="true">		
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/gamelist.png</path>
			<zIndex>1</zIndex>			
		</image>
		
		<!-- Marco media -->
		
		<image name="marco" extra="true">		
			<pos>0.3725 0.503</pos>
			<size>0.266 0.475</size>
			<path>./assets/marco.png</path>
			<zIndex>4</zIndex>			
		</image>
		
		<!-- Logo sistema -->
		
		<image name="logo" extra="false">
			<path>./assets/logos/${system.theme}.png</path>
			<pos>0.115 0.07</pos>
			<size>0.12 0.15</size>
			<zIndex>2</zIndex>			
		</image>
	
		<!-- Texto del sistema -->

		<helpsystem name="help">
			<pos>0.42 0.01</pos>
			<textColor>ed1c16</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./assets/Resident_Evil.ttf</fontPath>
			<fontSize>0.025</fontSize>			
		</helpsystem>
	
	</view>
	
	<view name="basic">
		
		<!-- Posicion de listado de juegos -->
		
		<textlist name="gamelist">		
			<selectorImagePath>./assets/selector.png</selectorImagePath>
			<selectorColor>719CC6</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<alignment>left</alignment>
			<fontPath>./assets/biohazard.otf</fontPath>	
			<forceUppercase>1</forceUppercase>
			<pos>0.0138 0.265</pos>
			<size>0.385 0.69</size>
			<fontSize>0.020</fontSize>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.035</horizontalMargin>
			<scrollSound>./assets/scroll.wav</scrollSound>
			<zIndex>3</zIndex>			
		</textlist>
		
		<!-- Posicion y tamaño imagen juego -->

		<image name="md_image">		
			<size>0.45 0.50</size>
			<pos>0.73 0.29</pos>
			<zIndex>2</zIndex>
		</image>
		
	</view>
	
	<view name="detailed">
	
		<!-- Posicion y tamaño imagen juego -->

		<image name="md_image">		
			<size>0.24 0.44</size>
			<pos>0.505 0.73</pos>
			<zIndex>2</zIndex>
		</image>
		
	</view>
	
	<feature supported="video">
	
		<view name="video">
		
			<!-- Posicion y tamaño del video juego -->

			<video name="md_video">			
				<size>0.248 0.44</size>
				<pos>0.505 0.74</pos>
				<delay>0.8</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
				<zIndex>2</zIndex>
			</video>
			
		</view>
		
	</feature>
			
	<view name="detailed,video">
	
		<!-- Posicion de listado de juegos -->
		
		<textlist name="gamelist">		
			<selectorImagePath>./assets/selector.png</selectorImagePath>
			<selectorColor>719CC6</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<alignment>left</alignment>
			<fontPath>./assets/biohazard.otf</fontPath>	
			<forceUppercase>1</forceUppercase>
			<pos>0.0138 0.265</pos>
			<size>0.345 0.69</size>
			<fontSize>0.03</fontSize>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.035</horizontalMargin>
			<scrollSound>./assets/scroll.wav</scrollSound>
			<zIndex>3</zIndex>			
		</textlist>

		<!-- Metadatos -->
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
		
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./assets/Resident_Evil 2.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<size>0.12 0.04</size>
			<zIndex>3</zIndex>
			
		</text>
				
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite ,md_releasedate, md_lastplayed">
		
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./assets/biohazard.otf</fontPath>
			<fontSize>0.035</fontSize>
			<size>0.14 0.04</size>
			<zIndex>3</zIndex>
			
		</text>

		<!-- Descripcion juego -->
		
		<text name="md_description">
		
			<pos>0.658 0.84</pos>
			<size>0.33 0.1</size>
			<color>4646fe</color>
			<fontPath>./assets/Resident_Evil 2.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<forceUppercase>1</forceUppercase>
			<zIndex>3</zIndex>
			
		</text>
		
		<text name="md_lbl_rating">
			<pos>0.76 0.65</pos>
		</text>

		<rating name="md_rating">
			<pos>0.765 0.69</pos>
			<size>0.028 0.028</size>
			<filledPath>./assets/star_filled.png</filledPath>
			<unfilledPath>./assets/star_empty.png</unfilledPath>
		</rating>
		
		<text name="md_lbl_players">
			<pos>0.76 0.73</pos>
		</text>
		
		<text name="md_players">
			<pos>0.765 0.76</pos>
		</text>
			
		<text name="md_lbl_genre">
			<pos>0.849 0.65</pos>
		</text>
		
		<text name="md_genre">
			<pos>0.854 0.69</pos>
		</text>
			
		<text name="md_lbl_releasedate">
			<pos>0.849 0.73</pos>
		</text>
		
		<datetime name="md_releasedate">
			<pos>0.859 0.76</pos>
			<zIndex>3</zIndex>
		</datetime>
			
		<text name="md_lbl_developer">
			<pos>1 1</pos>
		</text>
		
		<text name="md_developer">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_publisher">
			<pos>1 1</pos>
		</text>
		
		<text name="md_publisher">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_lastplayed">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>
			
		<text name="md_lbl_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_lbl_favorite">
			<pos>1 1</pos>
		</text>
		
		<text name="md_favorite">
			<pos>1 1</pos>
		</text>
		
	</view>
	
</theme>
